<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user_session from being saved:</h2>

			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				  <li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.label :login %>
	<%= f.text_field :login %><br />

	<%= f.label :email %>
	<%= f.text_field :email %><br />

	<%= f.label :password %>
	<%= f.password_field :password %><br />

	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %><br />
	
	<%= f.label :language_id %>
	<%= f.select :language_id, Language.all.collect { |l| [l.name, l.id] } %><br />

	<%= f.submit %>
<% end %>
